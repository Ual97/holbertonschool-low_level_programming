SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic
CC = gcc

all: $(NAME)

school: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

objects: $(SRC)
	$(CC) $(CFLAGS) -c $(SRC)
clean: 
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f *.o

fclean:
	$(RM) -f *~ $(NAME) $(OBJ)

re:
	$(RM) -f *~ $(NAME) $(OBJ)
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)
